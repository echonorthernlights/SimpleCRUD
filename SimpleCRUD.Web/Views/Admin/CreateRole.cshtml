@model SimpleCRUD.Web.Models.ViewModels.CreateRoleViewModel;
@{
    ViewData["Title"] = "Create New Role";
}

<div class="container">

    <h1 class="display-4">Create New Role</h1>

    <form method="post" asp-controller="Admin" asp-action="CreateRole">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label class="form-label">Role Name </label>
            <input type="text" class="form-control" id="RoleName" name="RoleName" asp-for="RoleName" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button class="btn btn-dark">Create Role</button>
        </div>
    </form>
</div>
