@model SimpleCRUD.Web.Models.ViewModels.CreatePersonRequest
@{
    ViewData["Title"] = "Add Person Page";
}

<div class="container">

        <h1 class="display-4">Add New Person</h1>
        
    <form method="post">
        <div class="mb-3">
            <label class="form-label">First Name </label>
            <input type="text" class="form-control" id="firstname" name="FirstName" asp-for="FirstName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Last Name </label>
            <input type="text" class="form-control" id="lastname" name="LastName" asp-for="LastName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Age </label>
            <input type="number" class="form-control" id="age" id="age" name="Age" asp-for="Age" />
        </div>
        <div class="my-2"><h2>Address</h2></div>
        <div class="mb-3">
            <label class="form-label">Street </label>
            <input type="text" class="form-control" id="street" name="Addresses[0].StreetName" asp-for="Addresses[0].StreetName" />
        </div>
        <div class="mb-3">
            <label class="form-label">City </label>
            <input type="text" class="form-control" id="city" name="Addresses[0].City" asp-for="Addresses[0].City" />
        </div>
        <div class="mb-3">
            <label class="form-label">State </label>
            <input type="text" class="form-control" id="state" name="Addresses[0].State" asp-for="Addresses[0].State" />
        </div>
        <div class="mb-3">
            <label class="form-label">Zip Code </label>
            <input type="text" class="form-control" id="zipcode" name="Addresses[0].ZipCode" asp-for="Addresses[0].ZipCode" />
        </div>
        <div class="mb-3">
            <label class="form-label">Email </label>
            <input type="email" class="form-control" id="email" name="EmailAddresses[0].EmailAddress" asp-for="EmailAddresses[0].EmailAddress" />
        </div>
        <div class="mb-3">
            <button class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>
